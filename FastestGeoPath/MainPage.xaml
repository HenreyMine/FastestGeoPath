<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastestGeoPath.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                x:Name="InstructionLabel"
                Text="Press button to start tracking path"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Control path tracking"
                Clicked="OnTrackingClicked"
                HorizontalOptions="Center" />

            <Label 
                x:Name="TimerLabel"
                HorizontalOptions="Center"
                FontSize="30" />

            <Label 
                x:Name="LocationLabel"
                HorizontalOptions="Center"
                FontSize="30" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
